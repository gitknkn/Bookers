<tbody>
<h1>Books</h1>

<table>
  <tr>
    <th align="center" valign="center">Title</th>
    <th align="center" valign="center">Body</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td align="left" valign="center"><%= book.title %></td>
      <td align="left" valign="center"><%= book.body %></td>
      <td align="left" valign="center" ><%= link_to 'show', book_path(book.id) %></td>
      <td align="left" valign="center" ><%= link_to 'edit', edit_book_path(book.id) %></td>
      <td align="left" valign="center"><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
</table>


<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  <% end %> 
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Body</h4>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
<% end %>
</tbody>
