<h2>Books</h2>

<% @books.each do |book| %>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  </table>

  <span>
    <%= link_to 'show', book_path(book.id) %> 
  </span>
  <span>
    <%= link_to 'edit', edit_book_path(book.id) %> 
  </span>

  <span>
  <%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  </span>

<% end %>
  


<h2>New book</h2>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
